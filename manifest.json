{
  "manifest_version": 3,
  "name": "Synch-Talk",
  "version": "1.0",
  "description": "An AI-powered Chrome side panel for fluent multilingual communication.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Synch-Talk"
    /* IMPORTANT: No "default_popup" here when using sidePanel.open() */
  }
}
