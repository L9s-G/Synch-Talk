{
  // 扩展的清单文件版本，目前推荐使用 v3
  "manifest_version": 3,
  
  // 扩展的名称
  "name": "Synch-Talk",
  
  // 扩展的版本号
  "version": "1.0",
  
  // 扩展的简短描述
  "description": "An AI-powered Chrome side panel for fluent multilingual communication.",
  
  // 扩展的图标，需要准备一个128x128像素的PNG文件
  "icons": {
    "128": "icon.png"
  },
  
  // 扩展需要请求的权限
  "permissions": [
    // 允许扩展在所有网站上使用，这对于读取页面内容并与之交互是必要的
    "activeTab",
    "scripting",
    // 允许扩展与Chrome的AI服务进行通信
    "declarativeNetRequest"
  ],
  
  // 定义侧边栏（Side Panel）
  "side_panel": {
    "default_path": "index.html"
  },
  
  // 扩展的后台服务，用于处理AI调用等后台任务
  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": ["*://*/*"]
}
